<!--pages/me/me.wxml-->
<view>
  <view class="head">
    <view class="user">
      <image src="{{image}}" class="img"></image>
      <view>
        <text>{{nickname}}</text>
        <view>成长值 0</view>
      </view>
    </view>
    <view class="huiyuan">
    <van-icon name="qr" />
    会员码
    </view>
    <view class="store">
      <van-cell is-link title="万茗堂商城" value="成为会员" 
    link-type="navigateTo" url="" custom-class="bg-dark" title-class="text-dark" value-class="text-white" />
    </view>
  </view>
  <view class="body">
    <van-cell is-link title="登录手机号,同步全渠道订单" value="登录" 
    link-type="navigateTo" url="" />
    <view class="foot">
     <view class="jifen">
      <view>
        <view>0</view>
        <view>积分</view>
      </view>
      <view>
        <view>0</view>
        <view>卡</view>
      </view>
      <view>
        <view>0</view>
        <view>优惠券/码</view>
      </view>
     </view>
      <view class="dingdan">
        <van-cell is-link title="我的订单" value="查看全部清单" link-type="navigateTo" url="" title-class="bold" />
        <van-grid column-num="5">
            <van-grid-item icon="pending-payment" text="待付款" />
            <van-grid-item icon="send-gift-o" text="待发货" />
            <van-grid-item icon="logistics" text="待收货" />
            <van-grid-item icon="comment-o" text="待评价" />
            <van-grid-item icon="gold-coin-o" text="退款/售后" />
        </van-grid>
      </view>
      <view class="car">
        <van-cell title="购物车" size="large"  icon="shopping-cart-o" link-type="navigateTo" url="../car/car"  />
        <van-cell title="任务中心" size="large"  icon="sign" link-type="navigateTo" url=""  />
        <van-cell title="返现" size="large"  icon="cash-back-record" link-type="navigateTo" url=""  />
        <van-cell title="赠品" size="large"  icon="goods-collect-o" link-type="navigateTo" url=""  />
      </view>
      <view class="shouhuo">
         <van-cell title="收货地址" size="large"  icon="location-o" link-type="navigateTo" url=""  />
      </view>
      <view class="geren">
         <van-cell title="个人信息" size="large"  icon="user-o" link-type="navigateTo" url=""  />
         <van-cell title="账号设置" size="large"  icon="manager-o" link-type="navigateTo" url=""  />
      </view>
    </view>
  </view>
</view>
